---
// Assets
import { Image } from "astro:assets";
import LimeStripe from "@/images/assets/LimeStripe.png";
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/foundations/elements/Text.astro";
import Wrapper from "@/components/foundations/containers/Wrapper.astro";
// Icons
import User from "@/components/foundations/icons/User.astro";
// Components
import CustomerEntry2 from "@/components/customers/CustomerEntry2.astro";
// Content
import { getCollection } from "astro:content";
const allCustomers = await getCollection("customers");
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="relative py-12 lg:pt-32 overflow-hidden">
      <Image
        src={LimeStripe}
        alt="Lime Stripe"
        class="absolute inset-0 size-full pointer-events-none scale-300 top-90"
      />
      <div class="relative">
        <Text
          class="span"
          variant="textXS"
          data-aos="fade-down"
          data-aos-duration="1000"
          class="flex items-center font-medium uppercase gap-2 text-base-600"
        >
          <User size="sm" class="text-yellow-600" />
          Customers
        </Text>
        <Text
          tag="h1"
          variant="display2XL"
          data-aos="fade-up"
          data-aos-duration="1000"
          class="mt-8 font-semibold tracking-tighter text-base-800 lg:text-balance"
        >
          Become a partner of th efuture of finance and banking with Munch.
        </Text>
        <Text
          tag="p"
          variant="textLG"
          data-aos="fade-up"
          data-aos-duration="1500"
          class="max-w-lg mt-4 font-medium text-base-800 md:text-balance"
        >
          Access expert guides, financial insights, and security tips to manage
          your finances with confidence in the digital age.
        </Text>
      </div>
    </Wrapper>
  </section>
  <section>
    <Wrapper variant="standard" class="py-4 border-t">
      <div class="flex flex-col gap-4">
        {allCustomers.map((post) => <CustomerEntry2 post={post} />)}
      </div>
    </Wrapper>
  </section>
</BaseLayout>
