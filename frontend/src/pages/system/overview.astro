---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/foundations/elements/Text.astro";
import Wrapper from "@/components/foundations/containers/Wrapper.astro";
// Data array
const pageData = [
  {
    sectionTitle: "All pages",
    categories: [
      {
        title: "Main",
        links: [
          { name: "Index", url: "/" },
          { name: "Index 2", url: "/index-two" },
          { name: "404", url: "/404" },
          { name: "All Pricing Sections", url: "/system/all-pricing" },
          { name: "All Features Sections", url: "/system/all-features" },
        ],
      },
      {
        title: "Forms",
        links: [
          { name: "Sign in", url: "/forms/sign-in" },
          { name: "Sign up", url: "/forms/sign-up" },
          { name: "Contact", url: "/forms/contact" },
        ],
      },
      {
        title: "System Pages",
        links: [
          { name: "Links", url: "/system/links" },
          { name: "Colors", url: "/system/colors" },
          { name: "Buttons", url: "/system/buttons" },
          { name: "Typography", url: "/system/typography" },
          {
            name: "License",
            url: "https://lexingtonthemes.com/legal/license/",
          },
          {
            name: "Documentation",
            url: "https://lexingtonthemes.com/documentation",
          },
        ],
      },
    ],
  },
  {
    sectionTitle: "Content collections",
    categories: [
      {
        title: "Customers",
        links: [
          { name: "Home", url: "/customers/home" },
          { name: "Details", url: "/customers/1" },
        ],
      },
      {
        title: "Help Center",
        links: [
          { name: "Knowledge Base", url: "/helpcenter/knowledge-base" },
          { name: "Home", url: "/helpcenter/home" },
          { name: "Details", url: "/helpcenter/1" },
        ],
      },
      {
        title: "Integrations",
        links: [
          { name: "Home", url: "/integrations/home" },
          { name: "Details", url: "/integrations/1" },
        ],
      },
      {
        title: "Changelog",
        links: [
          { name: "Home", url: "/changelog/home" },
          { name: "Details", url: "/changelog/1" },
        ],
      },

      {
        title: "Blog Pages",
        links: [
          { name: "Blog home", url: "/blog/home" },
          { name: "Blog home 2", url: "/blog/home-two" },
          { name: "Blog post", url: "/blog/posts/1" },
          { name: "Tag index", url: "/blog/tags" },
          { name: "Tag Category", url: "/blog/tags/accounts" },
          { name: "RSS", url: "/rss.xml" },
        ],
      },
      {
        title: "Utility Pages",
        links: [
          { name: "Terms Of use", url: "/infopages/terms" },
          { name: "Privacy Policy", url: "/infopages/privacy" },
        ],
      },
      {
        title: "Team",
        links: [
          { name: "Home", url: "/team/home" },
          { name: "Details", url: "/team/1" },
        ],
      },
    ],
  },
];
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="py-24">
      <Text
        tag="h1"
        variant="displayXL"
        class="font-semibold tracking-tighter text-base-800 lg:text-balance"
      >
        Overview
      </Text>
      <div class="grid grid-cols-1 md:grid-cols-2 mt-12">
        {
          pageData.map((section) => (
            <div>
              <Text
                tag="h3"
                variant="textBase"
                class="font-semibold text-base-800 md:text-balance"
              >
                {section.sectionTitle}
              </Text>
              <div class="pt-4 mt-4 grid grid-cols-2 md:grid-cols-2 gap-y-4">
                {section.categories.map((category) => (
                  <div class="flex flex-col ">
                    <Text
                      tag="h3"
                      variant="textBase"
                      class=" text-base-900 font-medium"
                    >
                      {category.title}
                    </Text>
                    <div class="mt-2">
                      {category.links.map((link) => (
                        <div>
                          <Text
                            tag="a"
                            variant="textSM"
                            class="font-medium text-base-500 hover:text-base-800"
                            href={link.url}
                            title={link.name}
                            aria-label={link.name}
                          >
                            {link.name}
                          </Text>
                        </div>
                      ))}
                    </div>
                  </div>
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </Wrapper>
  </section>
</BaseLayout>
