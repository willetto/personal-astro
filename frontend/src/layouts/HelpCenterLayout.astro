---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/foundations/elements/Text.astro";
import Wrapper from "@/components/foundations/containers/Wrapper.astro";
// Icons
import User from "@/components/foundations/icons/User.astro";
import Shield from "@/components/foundations/icons/Shield.astro";
import Settings from "@/components/foundations/icons/Settings.astro";
import CreditCard from "@/components/foundations/icons/CreditCard.astro";
import ChevronRight from "@/components/foundations/icons/ChevronRight.astro";
import InfoCircle from "@/components/foundations/icons/InfoCircle.astro";
const { frontmatter } = Astro.props;
const icons = {
  user: User,
  settings: Settings,
  shield: Shield,
  creditCard: CreditCard,
};
const IconComponent = icons[frontmatter.iconId] || InfoCircle;
// Breadcrumbs Data
const breadcrumbs = [
  { label: "Home", href: "/" },
  { label: "Help Center", href: "/helpcenter/home" },
  { label: frontmatter.page, href: "#" }, // Current page (unstyled)
];
---
<BaseLayout>
  <section>
    <Wrapper variant="standard" class="pt-32 pb-12">
      <!-- Breadcrumbs (Inline) -->
      <div class="max-w-xl mx-auto">
        <nav aria-label="Breadcrumb" class="mb-6">
          <ol class="flex items-center space-x-2 text-sm text-base-600">
            {
              breadcrumbs.map((item, index) => (
                <>
                  <li>
                    {index < breadcrumbs.length - 1 ? (
                      <a
                        href={item.href}
                        class="hover:text-teal-700 font-medium text-xs text-base-800"
                      >
                        {item.label}
                      </a>
                    ) : (
                      <span class="font-medium text-xs text-teal-600">
                        {item.label}
                      </span>
                    )}
                  </li>
                  {index < breadcrumbs.length - 1 && (
                    <li class="text-base-400">
                      <ChevronRight size="sm" />
                    </li>
                  )}
                </>
              ))
            }
          </ol>
        </nav>
        <Text
          tag="h3"
          variant="displayMD"
          class="font-semibold tracking-tight text-base-800 mt-12"
        >
          {frontmatter.page}
        </Text>
        <Text variant="textMD" class="mt-4 text-base-600 lg:text-balance">
          {frontmatter.description}
        </Text>
      </div>
    </Wrapper>
    <section>
      <Wrapper class="py-12 border-t">
        <Wrapper variant="prose" class="max-w-xl mx-auto">
          <Text
            variant="textXS"
            class="flex items-center font-medium uppercase text-base-600 gap-2"
          >
            <IconComponent size="sm" class="text-yellow-600" />
            <time datetime="{frontmatter.lastUpdated}">
              {
                new Date(frontmatter.lastUpdated).toLocaleDateString("en-US", {
                  year: "numeric",
                  month: "long",
                })
              }
            </time>
          </Text>
          <slot />
        </Wrapper>
      </Wrapper>
    </section>
    <section>
      <Wrapper variant="standard" class="py-12 border-t">
        <div class="max-w-xl mx-auto">
          <Text
            tag="h4"
            variant="displaySM"
            class="font-semibold text-base-800"
          >
            Frequently Asked Questions
          </Text>
          <ul class="mt-4 list-none space-y-4">
            {
              frontmatter.faq.map((item) => (
                <li class="flex">
                  <div>
                    <Text
                      tag="h5"
                      variant="textBase"
                      class="font-medium text-base-800"
                    >
                      {item.question}
                    </Text>
                    <Text variant="textMD" class="mt-2 text-base-500">
                      {item.answer}
                    </Text>
                  </div>
                </li>
              ))
            }
          </ul>
        </div>
      </Wrapper>
    </section>
  </section>
</BaseLayout>
