---
// Assets
import { Image } from "astro:assets";
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/foundations/elements/Text.astro";
import Wrapper from "@/components/foundations/containers/Wrapper.astro";

// Frontmatter
const { frontmatter } = Astro.props;
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="pt-32 pb-12">
      <div class="text-center lg:text-left lg:flex lg:items-center lg:gap-12 lg:justify-between">
        <Image
          width={500}
          height={500}
          src={frontmatter.avatar.url}
          alt={frontmatter.avatar.alt}
           data-aos="fade-down"
          data-aos-duration="1500"
          class="size-20 lg:size-48 rounded-full object-center mx-auto lg:mx-0 object-cover lg:order-last"
        />
        <div>
          <Text
            class="p"
            variant="textXS"
            data-aos="fade-down"
            data-aos-duration="1000"
            class="flex items-center font-medium uppercase text-base-500 gap-2 justify-center lg:justify-start mt-4"
          >
            {frontmatter.role}
          </Text>
          <Text
            tag="h1"
            variant="displayXL"
            data-aos="fade-up"
            data-aos-duration="1000"
            class="font-semibold tracking-tighter text-base-800 lg:text-balance mt-8"
          >
            {frontmatter.name}
          </Text>
          <Text
            tag="p"
            variant="textBase"
            data-aos="fade-up"
            data-aos-duration="1500"
            class="mt-4 font-medium text-base-600 md:text-balance max-w-sm mx-auto"
          >
            {frontmatter.intro}
          </Text>
        </div>
      </div>
    </Wrapper>
  </section>
  <section>
    <Wrapper class="py-12 border-t">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 items-start">
        <Wrapper variant="prose" class="lg:col-span-2"><slot /></Wrapper>

        <div class="flex flex-col gap-4">
          <dl>
            <dt>
              <Text
                tag="h4"
                variant="textBase"
                class="text-base-800 font-medium">Education</Text
              >
            </dt>
            <dd>
              <Text tag="p" variant="textSM" class="mt-2 text-base-400">
                {frontmatter.education.map((item) => <span> {item}</span>)}
              </Text>
            </dd>
          </dl>
          <dl>
            <dt>
              <Text tag="h3" variant="textBase" class="text-base-800">Date</Text
              >
            </dt>
            <dd>
              <Text tag="p" variant="textSM" class="mt-2 text-base-500">
                {frontmatter.experience.map((item) => <span> {item}</span>)}
              </Text>
            </dd>
          </dl>
        </div>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
