---
// Foundations
import "../styles/global.css";
import BaseHead from "@/components/foundations/head/BaseHead.astro";
// Scripts
import AOSBody from "@/components/foundations/scripts/AOSBody.astro";
// Components
import Footer from "@/components/global/Footer.astro";
import Navigation from "@/components/global/Navigation.astro";
// Hides nav and footer on selected screens by passing
// the hideNav and hideFooter props
// <BaseLayout hideNav={true} hideFooter={true}>
const { hideNav = false, hideFooter = false } = Astro.props;
---
<html
  lang="en"
  class="scroll-smooth selection:bg-base-800 selection:text-teal-500"
>
  <head>
    <BaseHead />
  </head>
  <body>
    <div
      class="bg-stripes max-w-7xl mx-auto xl:border-x 2xl:max-w-[1400px] brand-border-color px-2 md:px-0 w-full lg:overflow-hidden"
    >
      {!hideNav && <Navigation />}
      <main class="grow" style="padding-top: var(--nav-height, 0px);">
        <slot />
      </main>
    { !hideFooter && <Footer /> }
    </div>
    <!-- Scripts -->
    <AOSBody />
  </body>
</html>

<style>
  body{
    position: relative;
    display: flex;
    flex-direction: column;
    min-height: 100svh;
    background-color: light-dark(var(--color-tw-white), var(--color-base-800));    
    transition: background-color 0.3s ease-in-out, color 0.3s ease-in-out;
    text-wrap: pretty;
  }
</style>
